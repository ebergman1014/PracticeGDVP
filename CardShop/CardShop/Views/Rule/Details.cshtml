@model CardShop.ViewModels.RulesetDetails

@{
    ViewBag.Title = "Details";
}

<div>
    <h2>
        @Model.rulesetWrapper.Name
    </h2>
    Version @Model.rulesetWrapper.MajorVersion.@Model.rulesetWrapper.MinorVersion
</div>

<div>
    @foreach (var rule in Model.rulesDisplay)
    {
        <div>
            <h3><b>@rule.Name</b></h3>

            <h5>Conditions</h5>
            Field:
                @rule.Condition.field<br />
            Value:
                @rule.Condition.value
        
            <div>
                <h5>Then Actions</h5>
                @foreach (var action in rule.ThenActions)
                {
                    <text>Field: </text>@action.field.ToString()<br />
                    <text>Value: </text>@action.value.ToString()
                }
            </div>

            <div>
                <h5>Else Actions</h5>
                @foreach (var action in rule.ElseActions)
                {
                    <text>Field: </text>@action.field.ToString()<br />
                    <text>Value: </text>@action.value.ToString()
                }
            </div>
        </div>
    }
</div>

<h5>Assembly Path</h5>
@Html.DisplayFor(model => model.rulesetWrapper.AssemblyPath)


<h5>Activity Name</h5>
@Html.DisplayFor(model => model.rulesetWrapper.ActivityName)


<h5>Last Modified</h5>
@Html.DisplayFor(model => model.rulesetWrapper.ModifiedDate)


<p>
    @Html.ActionLink("Edit", "Edit", new { id=Model.rulesetWrapper.RuleSetId }) |
    @Html.ActionLink("Back to List", "Index")
</p>
